{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": ["es2017", "esnext.array"],
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "rootDir": "./src",
    "baseUrl": "."
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}
